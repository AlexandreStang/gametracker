generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String
  email    String
  password String
  lists    List[]
}

model List {
  id      String   @id @default(cuid())
  title   String
  date    DateTime @default(now())
  games   Game[]
  owner   User     @relation(fields: [ownerId], references: [id])
  ownerId String
}

model Game {
  id       String @id @default(cuid())
  igdb_id  String
  title    String
  platform String
  playtime Int
  list     List   @relation(fields: [listId], references: [id])
  listId   String
}
