generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  username    String       @unique
  email       String       @unique
  password    String
  playedGames playedGame[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Game {
  id               String       @id @default(cuid())
  igdbId           String       @unique
  slug             String       @unique
  title            String
  firstReleaseDate DateTime?
  cover            Cover        @relation(fields: [coverId], references: [id])
  coverId          String
  genres           Genre[]
  platforms        platform[]
  playedGames      playedGame[]
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

model playedGame {
  id        String   @id @default(cuid())
  game      Game     @relation(fields: [gameId], references: [id])
  gameId    String
  platform  String
  playtime  Int      @default(0)
  like      Boolean  @default(false)
  User      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cover {
  id        String   @id @default(cuid())
  url       String
  width     Int
  height    Int
  Game      Game[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Genre {
  id        String   @id @default(cuid())
  igdbId    String   @unique
  name      String
  Game      Game[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model platform {
  id        String   @id @default(cuid())
  igdbId    String   @unique
  name      String
  Game      Game[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
